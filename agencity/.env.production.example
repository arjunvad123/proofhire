# =============================================================================
# Agencity Production Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# ── App ──────────────────────────────────────────────────────────────────────
APP_ENV=production
DEBUG=false

# ── Security ─────────────────────────────────────────────────────────────────
# Used for JWT signing (if needed later)
SECRET_KEY=<generate-a-random-64-char-string>

# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ── Supabase (REQUIRED) ─────────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=eyJ...your-service-role-key...

# ── Redis (REQUIRED for rate limiting) ───────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── LLM APIs ────────────────────────────────────────────────────────────────
# At least one is required for search scoring
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
CLAUDE_MODEL=claude-sonnet-4-20250514

# ── People Search Providers ──────────────────────────────────────────────────
# Clado AI - LinkedIn search + enrichment (RECOMMENDED)
# Get key at: https://clado.ai
# Used for: natural language people search + profile enrichment waterfall
CLADO_API_KEY=

# Apollo.io - Structured people search (requires paid plan, $49/mo+)
# Get key at: https://app.apollo.io/settings/integrations/api
# Used for: filter-based people search (titles, locations, companies)
APOLLO_API_KEY=

# Firecrawl - Web search for LinkedIn profiles (RECOMMENDED)
# Get key at: https://firecrawl.dev
# Used for: site:linkedin.com/in web searches to find candidates
FIRECRAWL_API_KEY=

# Google Custom Search Engine (optional)
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=

# ── Enrichment ───────────────────────────────────────────────────────────────
# Perplexity - Deep research on top candidates
PERPLEXITY_API_KEY=

# GitHub - Code/repo analysis
GITHUB_TOKEN=

# ── Vector Search ────────────────────────────────────────────────────────────
PINECONE_API_KEY=
PINECONE_INDEX_NAME=agencity-people
PINECONE_ENVIRONMENT=us-east-1

# ── Error Tracking (Optional) ───────────────────────────────────────────────
SENTRY_DSN=

# ── Slack Integration (Optional) ────────────────────────────────────────────
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
