# Database
DATABASE_URL=postgresql://proofhire:proofhire@localhost:5432/proofhire
DATABASE_URL_TEST=postgresql://proofhire:proofhire@localhost:5432/proofhire_test

# Redis
REDIS_URL=redis://localhost:6379/0

# S3 / MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=proofhire-artifacts
S3_REGION=us-east-1

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Anthropic (for LLM tagging)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Runner
RUNNER_TIMEOUT_SECONDS=600
